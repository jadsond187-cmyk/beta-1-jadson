<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<title>BETA1 • Relógio Assistente</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

<style>
*{
    margin:0;
    padding:0;
    box-sizing:border-box;
    font-family:'Poppins', sans-serif;
}

body{
    min-height:100vh;
    background:linear-gradient(135deg,#0b0000,#400000);
    display:flex;
    justify-content:center;
    align-items:center;
    color:white;
}

/* CONTAINER */
.app{
    display:flex;
    gap:40px;
    background:rgba(0,0,0,0.6);
    padding:30px;
    border-radius:25px;
    box-shadow:0 0 40px rgba(255,0,0,0.4);
}

/* RELÓGIO */
.clock{
    width:320px;
    height:320px;
    border:8px solid #b00000;
    border-radius:50%;
    position:relative;
    background:#000;
}

/* NÚMEROS */
.number{
    position:absolute;
    width:100%;
    height:100%;
    text-align:center;
    transform:rotate(calc(var(--n) * 30deg));
}

.number span{
    display:block;
    transform:rotate(calc(var(--n) * -30deg));
    margin-top:10px;
    font-weight:bold;
}

/* PONTEIROS */
.hand{
    position:absolute;
    bottom:50%;
    left:50%;
    transform-origin:bottom;
    transform:translateX(-50%);
}

.hour{
    width:6px;
    height:70px;
    background:white;
}

.minute{
    width:4px;
    height:100px;
    background:#ddd;
}

.second{
    width:2px;
    height:120px;
    background:red;
}

.center{
    width:12px;
    height:12px;
    background:red;
    border-radius:50%;
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    z-index:10;
}

/* FUNDO COM ANOTAÇÕES */
.notes{
    position:absolute;
    inset:40px;
    background:rgba(20,0,0,0.6);
    border-radius:50%;
    padding:20px;
    overflow:hidden;
}

.notes textarea{
    width:100%;
    height:100%;
    resize:none;
    background:transparent;
    border:none;
    outline:none;
    color:#ffdddd;
    font-size:0.85em;
    text-align:center;
}

/* PAINEL */
.panel{
    width:220px;
}

.panel h1{
    text-align:center;
    margin-bottom:15px;
    color:#ff3333;
}

.panel button,
.panel input{
    width:100%;
    margin-bottom:10px;
    padding:10px;
    border:none;
    border-radius:10px;
    font-weight:bold;
}

.panel button{
    background:#b00000;
    color:white;
    cursor:pointer;
}

.panel button:hover{
    background:#ff3333;
}
</style>
</head>

<body>

<div class="app">

    <!-- RELÓGIO -->
    <div class="clock" id="clock">

        <!-- NÚMEROS -->
        <div class="number" style="--n:1"><span>1</span></div>
        <div class="number" style="--n:2"><span>2</span></div>
        <div class="number" style="--n:3"><span>3</span></div>
        <div class="number" style="--n:4"><span>4</span></div>
        <div class="number" style="--n:5"><span>5</span></div>
        <div class="number" style="--n:6"><span>6</span></div>
        <div class="number" style="--n:7"><span>7</span></div>
        <div class="number" style="--n:8"><span>8</span></div>
        <div class="number" style="--n:9"><span>9</span></div>
        <div class="number" style="--n:10"><span>10</span></div>
        <div class="number" style="--n:11"><span>11</span></div>
        <div class="number" style="--n:12"><span>12</span></div>

        <!-- FUNDO -->
        <div class="notes">
            <textarea id="notes" placeholder=
"08:30 - Acordar
09:00 - Exercícios
10:00 - Banho
11:00 - Estudo
12:30 - Almoço"></textarea>
        </div>

        <!-- PONTEIROS -->
        <div class="hand hour" id="hour"></div>
        <div class="hand minute" id="minute"></div>
        <div class="hand second" id="second"></div>
        <div class="center"></div>
    </div>

    <!-- PAINEL -->
    <div class="panel">
        <h1>BETA1</h1>
        <button onclick="salvar()">Salvar Anotações</button>
        <input type="color" id="cor" onchange="mudarCor()">
    </div>

</div>

<script>
const hourHand = document.getElementById("hour");
const minuteHand = document.getElementById("minute");
const secondHand = document.getElementById("second");
const notes = document.getElementById("notes");
const clock = document.getElementById("clock");

/* RELÓGIO PRECISO */
function atualizarRelogio(){
    const agora = new Date();
    const h = agora.getHours() % 12;
    const m = agora.getMinutes();
    const s = agora.getSeconds();

    hourHand.style.transform =
        `translateX(-50%) rotate(${h*30 + m*0.5}deg)`;
    minuteHand.style.transform =
        `translateX(-50%) rotate(${m*6 + s*0.1}deg)`;
    secondHand.style.transform =
        `translateX(-50%) rotate(${s*6}deg)`;
}

setInterval(atualizarRelogio,1000);
atualizarRelogio();

/* SALVAR */
notes.value = localStorage.getItem("beta1_notes") || "";

function salvar(){
    localStorage.setItem("beta1_notes", notes.value);
    alert("Rotina salva no BETA1 ✔️");
}

/* PERSONALIZAÇÃO */
function mudarCor(){
    clock.style.borderColor = cor.value;
}
</script>

</body>